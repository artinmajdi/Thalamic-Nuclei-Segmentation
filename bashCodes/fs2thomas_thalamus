#!/bin/tcsh
# Extract thalamic labels from a FS mgz file 

# Usage: fs2thomas <mgz file of segmentation>  <WMn image to reslice FS to> <1=bilateral, default 0 left>
if ($#argv < 1) then
echo "Usage: fs2thomas <seg file mgz> [opt:Wmn or T1 to reslice to] [opt: bilateral/unilateral not implemented]  < output> "
endif


mkdir Prediction
mri_extract_label $1 10 $3/1-THALAMUS.nii.gz
mri_convert -rt nearest -rl $2 $3/1-THALAMUS.nii.gz $3/1-THALAMUS.nii.gz
mri_binarize --i $3/1-THALAMUS.nii.gz --min 0.1 --o $3/1-THALAMUS.nii.gz 



